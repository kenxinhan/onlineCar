@import '../../app.wxss';

.page {
  width: 100%;
  height: 100vh;
  box-sizing: border-box;
}



.container {
  width: 100%;
  /* height: 500rpx; */
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 0;
}

.flexBox {
  width: 710rpx;
  /* height: 280rpx; */
  position: absolute;
  bottom: 330rpx;
  display: flex;
  justify-content: space-between;
}

.flexBox .flex-item {
  width: 30%;
  /* height: 280rpx; */
  padding: 10rpx;
  border: 1px solid #d1d1d1;
  border-radius: 20px;
  background-color: #fff;
  color: #333;
  text-align: center;
  box-sizing: border-box;
  font-size: 24rpx;
  /* box-shadow:3px 1px 3px #e0e0e0;  */
}

.flex-item.active {
  background-color: #AFEEEE;
  border: 1px solid #AFEEEE;
}

.current-mylocation-box {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  right: 20rpx;
  bottom: 200rpx;
  z-index: 999;
}

.current-mylocation {
  width: 100rpx;
  height: 100rpx;
}


.footerBox {
  width: 100%;
  /* height: 500rpx; */
  position: relative;
}

.footerBox .infoBox {
  width: 100%;
  /* height: 300rpx; */
  background-color: #fff;
  border-radius: 5px;
  box-shadow: 3px 1px 3px #e0e0e0;
  position: absolute;
  bottom: 130rpx;
}

.appointment-time {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx 40rpx 0;
  box-sizing: border-box;
}

.appointment-time image {
  width: 40rpx;
  height: 40rpx;
  padding-right: 20rpx;
}

.ap_tit {
  width: 100rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  box-sizing: border-box;
  border: 1px solid #FF6600;
  border-radius: 60rpx;
  color: #FF6600;
  font-size: 30rpx;
  margin-right: 60rpx;
}

.ap_r{
  display: flex;
  align-items: center;
}

.start-date {
  color: #999;
  font-size: 30rpx;
}

.info-loca {
  width: 100%;
  height: 224rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}

.info-loca-border {
  width: 100%;
  height: 224rpx;
  position: relative;
}


.circle-str {
  position: absolute;
  height: 10px;
  width: 10px;
  border-radius: 50%;
  background: #3cbca3;
  left: 0;
  top: 48rpx;
}

.input-str {
  margin-left: 65rpx;
  height: 112rpx;
  line-height: 112rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 28rpx;
  border-bottom: 1px solid #f2f2f2;
}

.input-end {
  height: 112rpx;
  line-height: 112rpx;
  margin-left: 65rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 28rpx;
  border-bottom: 1px solid #f2f2f2;
}

.circle-end {
  position: absolute;
  height: 10px;
  width: 10px;
  border-radius: 50%;
  background: #fc9153;
  left: 0;
  bottom: 48rpx;
}

.cost {
  width: 100%;
  min-height: 110rpx;
  display: flex;
  flex-flow: column;
  justify-content: space-around;
  text-align: center;
}

.big-price {
  font-size: 32rpx;
}

.cost-text_num{
  font-size: 36rpx;
  font-weight: bold;
}

.p_arrow{
  width: 26rpx;
  height: 26rpx;
  margin-left: 8rpx;
}

.preferentialPrice{
  color: #999;
  font-size: 22rpx;
}

.footerBox .btnBox {
  width: 90%;
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
}

.next-step {
  width: 100%;
  height: 92rpx;
  line-height: 92rpx;
  font-size: 32rpx;
  background: linear-gradient(to right,#FF8008,#FFC837);
  color: #fff;
  border: none;
}

.text-list {
  display: block;
  font-size: 26rpx;
  line-height: 46rpx;
}