.fixed-line {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: auto;
  padding: 30rpx 30rpx 0;
  z-index: 999;
  background-color: #F2F2F2;
}

.didi-input-str {
  position: absolute;
  top: 0;
  left: 105rpx;
  border-bottom: 1px solid #f5f5f5;
  height: 120rpx;
  width: 100%;
  line-height: 120rpx;
  font-size: 28rpx;
  color: #333;
}

.circle-str {
  position: absolute;
  height: 20rpx;
  width: 20rpx;
  border-radius: 50%;
  background: #3cbca3;
  left: 40rpx;
  top: 50rpx;
}

.didi-input-end {
  position: absolute;
  height: 107rpx;
  width: 100%;
  line-height: 120rpx;
  left: 105rpx;
  bottom: 8rpx;
  font-size: 28rpx;
  color: #FF8008;
}

.circle-end {
  position: absolute;
  height: 20rpx;
  width: 20rpx;
  border-radius: 50%;
  background: #fc9153;
  left: 40rpx;
  top: 164rpx;
}

.line-wrapper {
  background-color: #fff;
  border-radius: 10rpx;
}

.fixed-line>.curr_city {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 30rpx;
}

.fixed-line>.curr_city>.city-right {
  display: flex;
  align-items: center;
}

.fixed-line>.curr_city image {
  width: 44rpx;
  height: 44rpx;
  padding-right: 20rpx;
}

.fixed-line .line-which {
  width: 100%;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 60rpx;
  box-sizing: border-box;
}

.fixed-line .line-which>.line-start,
.fixed-line .line-which>.line-end {
  width: 220rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  text-align: center;
}

.line_car_png {
  width: 64rpx;
  height: 64rpx;
  display: block;
}

.line-detail-address {
  position: relative;
}

.line-detail-address .didi-input-str,
.line-detail-address .didi-input-end {
  width: 88%;
  margin-left: 12%;
  height: 120rpx;
  position: static;
  top: 0;
  left: 0;
}

.line-detail-address .circle-str {
  margin-left: -10rpx;
  left: 6%;
  top: 50rpx;
}

.line-detail-address .circle-end {
  margin-left: -10rpx;
  left: 6%;
  top: 170rpx;
}


.line-price>.line-tot {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #333;
  font-size: 44rpx;
  padding-top: 36rpx;
  border-top: 1px solid #f5f5f5;
}

.line-price .tot-l>text {
  font-size: 100rpx;
  font-weight: bold;
}

.tot-r{
  margin-left: 40rpx;
}

.tot-rt{
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 40rpx;
  border-bottom-left-radius: 0;
  background: linear-gradient(to right,#FFC837,#FE1196);
  color: #fff;
  font-size: 22rpx;
  text-align: center;
  margin-bottom: 4rpx;
  padding: 0 12rpx;
}

.line-price .line-desc {
  font-size: 22rpx;
  color: #999;
  text-align: center;
  text-decoration: line-through;
}

.line-price>.line-coupon{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  font-weight: bold;
}

.choose-coupon-text{
  color: #FE2911;
  margin-right: 20rpx;
}

.choose-coupon-btn{
  width: 140rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background:linear-gradient(to right,#FE2108,#F57445);
  border-radius: 10rpx;
  color: #fff;
}

.line-person-num {
  display: flex;
  margin: 40rpx 0 10rpx 24rpx;
}

.line-person-num>image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 60rpx;
}

.line-per-item {
  width: 80rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  background-color: #ccc;
  color: #fff;
  margin-right: 40rpx;
  border-radius: 12rpx;
}

.line-per-wrapper {
  display: flex;
}

.line-per-item-active {
  background-color: #FF8008;
}

.line-btn {
  margin: 24rpx auto 0;
  width: 650rpx;
  height: 90rpx;
  background: linear-gradient(to right, #FF8008, #FFC837);
  text-align: center;
  line-height: 90rpx;
  color: #fff;
}

.lineTimeBox {
  display: flex;
  justify-content: start;
  align-items: center;
  margin-top: 10rpx;
  font-size: 28rpx;
  padding-left: 22rpx;
}

.lineTimeBox .timeImg {
  width: 32rpx;
  height: 32rpx;
  padding-right: 20rpx;
}

.lineTimeBox .time-picker {
  color: #FF8008;
}

.scan-line-list {
  width: 650rpx;
  margin: 0 auto;
  padding-top: 40rpx;
}

.scan-line-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 100rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 12rpx #ddd;
  font-size: 28rpx;
  font-weight: bold;
  color: #999;
  margin-bottom: 40rpx;
  padding: 24rpx 30rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.scan-line-item>.scan-line-start,
.scan-line-item>.scan-line-end {
  width: 240rpx;
  text-align: center;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}

.scan-no-bt {
  border-top: none;
}

.scan-line-item-active {
  color: #333;
  box-shadow: 0 0 12rpx #FF8008;
}

.agreement{
  display: flex;
  align-items: center;
  margin-left: 22rpx;
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  text-indent: 6rpx;
}

.disable-call{
  background: #ccc;
  border: none;
}

.movable-area{
  width: 100%;
  height: 100vh;
  position: absolute;
  left: 0;
  top: 0;
  pointer-events: none;
}

.movable-view{
  width: 200rpx;
  height: 200rpx;
  z-index: 9999;
  pointer-events: auto;
}

.integral-img{
  width: 100%;
  height: 100%;
}