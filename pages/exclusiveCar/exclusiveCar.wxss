view{
  box-sizing: border-box;
}

picker{
  display: inline-block;
}


.container{
  width: 100%;
  height: 100vh;
  font-size: 32rpx;
  color: #333;
  padding: 30rpx;
  background-color: #F2F2F2;
}

.top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 44rpx;
  line-height: 44rpx;
  margin-bottom: 30rpx;
}

.top>.city-right {
  display: flex;
  align-items: center;
}

.top image {
  width: 44rpx;
  height: 44rpx;
  padding-right: 20rpx;
}

.middle{
  width: 100%;
  padding: 40rpx 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
}

.middle>view{
  margin-bottom: 30rpx;
}

.people-num{
  margin-bottom: 0;
}

.start-address{
  display: flex;
  align-items: center;
}

.start-address>.str-name{
  display: inline-block;
  position: relative;
  color: #FF8008;
  white-space: nowrap;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
}

