.time-picker{
  color: #FF8008;
}

.date-num{
  display: flex;
  align-items: center;
}

.num-click{
  position: relative;
  width: 182rpx;
  height: 50rpx;
}

.num-click>image{
  position: absolute;
  top: 0;
}

.num-des{
  width: 50rpx;
  height: 50rpx;
  left: 0;
}

.num-add{
  width: 50rpx;
  height: 50rpx;
  right: 0;
}

.num-click>.num{
  position: absolute;
  left: 50rpx;
  top: 0;
  width: 78rpx;
  height: 50rpx;
  line-height: 50rpx;
  background-color: #FF8008;
  color: #fff;
  text-align: center;
  margin: 0 2rpx;
  font-weight: bold;
}

.long-time{
  display: flex;
  align-items: center;
}

.long-time-picker{
  /* width: 240rpx; */
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background-color: #FF8008;
  color: #fff;
  font-size: 28rpx;
  border-radius: 10rpx;
  font-weight: bold;
  white-space: nowrap;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 0 10rpx;
}

.bottom{
  width: 100%;
  padding: 30rpx 20rpx;
  margin-top: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
}

.tips-title{
  font-size: 28rpx;
}

.tips-cont{
  font-size: 24rpx;
  color: #FF8008;
}

.line-name{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 80rpx;
  font-size: 36rpx;
  font-weight: bold;
}

.line-name>.start-line,.line-name>.end-line{
  width: 180rpx;
  white-space: nowrap;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: center;
}

.pay{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 300rpx;
  padding: 0 30rpx 20rpx;
}

.btm-top{
  width: 100%;
  height: 170rpx;
  background-color: #fff;
  border-radius: 10rpx;
}

.price{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100rpx;
  border-bottom: 2rpx solid #f2f2f2;
  padding: 20rpx 0;
}

.real-price{
  font-size: 32rpx;
  color: #FF8008;
  margin-right: 20rpx;
}

.price-rt{
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 40rpx;
  border-bottom-left-radius: 0;
  background: linear-gradient(to right,#FFC837,#FE1196);
  color: #fff;
  font-size: 22rpx;
  text-align: center;
  margin-bottom: 4rpx;
  padding: 0 12rpx;
}

.price-coupon{
  width: 100%;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  font-weight: bold;
  padding: 20rpx 0;
}

.choose-coupon-text{
  color: #FE2911;
  margin-right: 20rpx;
}

.choose-coupon-btn{
  width: 140rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background:linear-gradient(to right,#FE2108,#F57445);
  border-radius: 10rpx;
  color: #fff;
}

.del-price{
  font-size: 20rpx;
  color: #999;
  text-decoration: line-through;
}

.pay-btn{
  /* position: absolute;
  left: 20rpx;
  right: 20rpx;
  bottom: 20rpx; */
  width: 100%;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  color: #fff;
  font-size: 36rpx;
  margin-top: 20rpx;
  background: linear-gradient(to right,#FF8008,#FFC837);
}


.movable-area{
  width: 100%;
  height: 100vh;
  position: absolute;
  left: 0;
  top: 0;
  pointer-events: none;
}

.movable-view{
  width: 200rpx;
  height: 200rpx;
  z-index: 9999;
  pointer-events: auto;
}

.integral-img{
  width: 100%;
  height: 100%;
}
