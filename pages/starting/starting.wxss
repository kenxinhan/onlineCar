.container {
  position: relative;
  width: 100%;
  height: 100vh;
  background-color: #eee;
}

.location {
  width: 100%;
  height: 88rpx;
  top: 0;
  background-color: #fff;
  font-size: 28rpx;
  position: relative;
}

.location-city {
  height: 88rpx;
  position: absolute;
  width: 160rpx;
  line-height: 88rpx;
  text-align: center;
  color: #333333;
  font-size: 36rpx;
  font-weight: bold;

}

.arrow-icon{
  width: 26rpx;
  height: 26rpx;
  position: absolute;
  top: 50% ;
  left: 148rpx ;
  transform: translateY(-50%);
}

.dott_line1{
  position: absolute;
  left: 200rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 0;
  height: 30rpx;
  border-right: 2rpx dotted #f2f2f2;
  z-index: 999;
}

.dott_line2{
  position: absolute;
  left: 630rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 0;
  height: 30rpx;
  border-right: 2rpx dotted #f2f2f2;
  z-index: 999;
}

.location-input {
  height: 88rpx;
  width: 470rpx;
  margin-left: 232rpx;
  line-height: 88rpx;
  /* background: red; */
}

.location-cancel {
  width: 120rpx;
  height: 88rpx;
  position: absolute;
  right: 0;
  top: 0;
  line-height: 88rpx;
  color: #999999;
  text-align: center;
}

.addressList {
  position: fixed;
  top: 98rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 999;
  border-radius: 10rpx;
}

.destination {
  box-sizing: border-box;
  top: 50rpx;
  width: 710rpx;
  box-shadow: 3px 5px 10px #e0e0e0;
  background-color: #fff;
}

.destination-content {
  width: 712rpx;
  height: 168rpx;
  border-bottom: 1px solid #f2f2f2;
  box-shadow: 3px 5px 10px #f2f2f2;
  display: flex;
  align-items: center;
}

.content-image {
  width: 80rpx;
  height: 119rpx;
  line-height: 119rpx;
  text-align: center;
}

.destination-content image {
  width: 32rpx;
  height: 32rpx;
  opacity: .3;
  color: #999999;

}

.content {
  width: 240px;
  box-sizing: border-box;
  overflow: hidden;
}

.content-name {
  display: block;
  color: #333333;
  font-size: 28rpx;
}

.content-detail {
  display: block;
  color: #999999;
  font-size: 24rpx;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 16rpx;
}

.distance {
  margin-left: 40rpx;
  width: 100rpx;
  color: #333333;
  font-size: 26rpx;
}

.wrapper {
  padding: 20rpx 30rpx;
}

.home_comp {
  height: 80rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx;
  font-size: 32rpx;
  border-radius: 10rpx;
}

.home_comp image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 30rpx;
}

.home_comp>.home,
.home_comp>.company {
  flex: 1;
  display: flex;
  align-items: center;
}

.home_comp .t {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.home_comp .b {
  color: #999;
  font-size: 28rpx;
}

.home_comp .text {
  flex: 1;
}

.used-location image {
  width: 20rpx;
  height: 20rpx;
  padding: 0 30rpx;
}

.tit {
  padding: 20rpx 0;
  font-size: 42rpx;
  font-weight: bold;
}

.used-location>.list {
  display: flex;
  flex-wrap: wrap;
  font-size: 32rpx;
}

.used-location .item {
  width: 48%;
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.lo_name {
  flex: 1;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}

.used-location .item:nth-of-type(odd) {
  margin-right: 4%;
}

.his_scroll {
  height: 400rpx;
}

.history>.tit {
  padding-top: 0;
}

.history .item {
  display: flex;
  align-items: center;
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  padding: 10rpx 0;
  margin-bottom: 5rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
}

.history image {
  width: 30rpx;
  height: 30rpx;
  padding: 0 30rpx;
}

.his_desc {
  font-size: 28rpx;
  color: #999;
}

.clear-his {
  text-align: center;
  font-size: 30rpx;
  color: #39b9cf;
  margin-top: 10rpx;
}

.no-his {
  text-align: center;
  font-size: 30rpx;
  color: #999;
}