.wleft {
  padding-right: 30rpx;
  margin-right: 30rpx;
  border-right: 1rpx solid #F2F2F2;
}

.wleft>.txt {
  font-size: 26rpx;
  color: #333;
}

.wleft>.time {
  font-size: 28rpx;
  color: #FF8008;
}

.wright {
  font-size: 28rpx;
  color: #333;
  line-height: 80rpx;
  text-align: center;
}

/* .wait-info{
  background-color: #f2f2f2;
} */

.path-info {
  height: 112rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #F2F2F2;
}

.path-time{
  margin-right: 30rpx;
}

.wait-price {
  height: 166rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow: 5rpx 5rpx 5rpx #F2F2F2;
}

.wait-price>.tot {
  font-size: 32rpx;
  color: #FF8008;
  margin-bottom: 10rpx;
}

.wait-price .tot_num{
  font-size: 36rpx;
  font-weight: bold;
}


.wait-price>.desc {
  font-size: 22rpx;
  color: #999;
}

.wait-cancle {
  width: 690rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 36rpx;
  color: #fff;
  background: linear-gradient(to right,#FF8008,#FFC837);
  margin: 16rpx auto;
  border-radius: 10rpx;
}

.walk-tips {
  display: flex;
  align-items: center;
  width: 90%;
  position: fixed;
  top: 5rpx;
  left: 50%;
  z-index: 999;
  transform: translateX(-50%);
  font-size: 32rpx;
  text-align: center;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 2rpx 2rpx 3rpx #ccc;
}

.walk-tips>image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.walk-tips text {
  color: #ff6600;
}

.path-tips {
  height: 70rpx;
  position: fixed;
  left: 20rpx;
  top: 45%;
  z-index: 999;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-radius: 90rpx;
  background-color: rgba(255, 255, 255,.7);
  font-size: 26rpx;
  box-shadow: 1rpx 2rpx 2rpx #999;
}

.path-tips>.path-tips-inner{
  padding-right: 30rpx;
  margin-right: 30rpx;
  border-right: 1rpx solid #ccc;
}

.path-tips text {
  color: #ff9100;
  font-size: 32rpx;
}

.has-future{
  height: 50rpx;
  display: flex;
  padding: 30rpx 0;
  justify-content: center;
  align-items: center;
  color: #999;
  font-size: 32rpx;
  background-color: #fff;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 412rpx;
  z-index: 999;
  border-bottom: 1rpx solid #f2f2f2;
}

.has-future>image{
  width: 40rpx;
  height: 40rpx;
  padding-right: 20rpx;
}