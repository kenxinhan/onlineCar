@import '../../styles/driver.wxss';

.footer {
  background: #fff;
  width: 710rpx;
  height: 120rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin: 0 auto;
}

.total_driver{
  width: 100rpx;
  height: 230rpx;
  background-color: #fff;
}

.driver_info{
  position: absolute;
  width: 550rpx;
  float: left;
  display: flex;
  align-items: center;
  margin-left: 40rpx;
  font-size: 30rpx;
}

.driver_img{
  margin-right: 22rpx;
  text-align: center;
}

.driver_img>.name{
  width: 140rpx;
  font-size: 28rpx;
  font-weight: bold;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.driverImg{
  width: 90rpx;
  height: 90rpx;
  margin-top: 44rpx;
}

.d_top{
  width: 400rpx;
  font-size: 28rpx;
  display: flex;
  color: #333;
  padding-top: 42rpx;
}

.d_top>view{
  flex: 1;
}

.d_md{
  width: 400rpx;
  display: flex;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin: 16rpx 0 20rpx;
}

.d_md>.detailed_Cartnumber{
  padding: 0 8rpx;
  text-align: center;
  background-color: #F2F2F2;
  margin-right: 23rpx;
}

.d_md>.d_id{
  padding: 0 8rpx;
  text-align: center;
  background-color: #F2F2F2;
}

.d_md>.detailed_cart{
  font-size: 24rpx; 
}

.driver_icon{
  position: absolute;
  top: 96rpx;
  right: 60rpx;
}

.driver_icon image{
  width: 44rpx;
  height: 44rpx;
}

.enpty-box {
  width: 100%;
  height: 0;
  border: 0.5px solid #f5f5f5;
}

.footer-box {
  width: 100%;
  height: 60rpx;
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  font-size: 32rpx;
  font-weight: bold;
}

.footer_contact{
  font-size: 32rpx;
  width: 100%;
  text-align: center;
  height: 87rpx;
  line-height: 87rpx;
  color: #333;
}

.footer-desc {
  font-size: 32rpx;
  width: 50%;
  text-align: center;
  height: 87rpx;
  line-height: 87rpx;
  color: #333;
}

.footer-desc:first-child{
  border-right: 1rpx solid #F2F2F2;
}


.ft {
  min-height: 88rpx;
  position: absolute;
  width: 710rpx;
  color: rgba(0, 0, 0, .6);
  background: #fff;
  margin: 20rpx 20rpx 0 20rpx;
  box-shadow: 3px 5px 10px #e0e0e0;
  border-radius: 10rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.ft-cancel {
  text-align: left;
  margin-left: 20rpx;
}

.ft-img {
  width: 64rpx;
  height: 64rpx;
  display: inline-block;
}

.ft-address {
  display: inline;
  color: #ff6600;
}

.looking-img {
  animation: loading 1s linear infinite;
}

@keyframes loading {
  0% {
    transform: rotate(0)
  }

  50% {
    transform: rotate(180deg)
  }

  100% {
    transform: rotate(360deg)
  }
}

.map {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 80%;
  z-index: 1;
}

.modal-text {
  line-height: 120rpx;
}

.wait {
  width: 500rpx;
  height: 80rpx;
  display: flex;
  background-color: rgba(255, 255, 255,.7);
  border-radius: 80rpx;
  position: fixed;
  z-index: 999;
  top: 2%;
  left: 50%;
  transform: translateX(-50%);
  padding: 10rpx 30rpx;
  box-shadow: 5rpx 5rpx 5rpx #ccc;
}

