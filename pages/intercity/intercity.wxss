/* pages/intercity/intercity.wxss */
page{
  width: 100%;
  height: 100vh;
  background-color: #f4f6f8;
}

.clearfix::after{
  content: '';
  height: 0;
  visibility: hidden;
  clear: both;
  display: block;
}

.container{
  width: 100%;
  box-sizing: border-box;
}

.head-box{
  width: 100%;
  padding: 30rpx 40rpx;
  background-color: #fff;
  box-shadow: 3px 5px 10px #e0e0e0;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 80rpx;
}

.head-address{
  font-size: 28rpx;
  font-family: '微软雅黑';
  color: #333;
}

.arrow-right{
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  border-top: 1px solid #333;
  border-right: 1px solid #333;
  transform: rotate(45deg);
  vertical-align: middle;
}

.con-box{
  width: 710rpx;
  margin: 10rpx 20rpx 0 20rpx;
  padding-bottom: 40rpx;
  box-sizing: border-box;
}

.con-item{
  position: relative;
  width: 100%;
  border: 1px solid #d1d1d1;
  border-radius: 5px;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
  padding: 30rpx 40rpx;
}

.con-item-top{
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.progress-time{
  position: absolute;
  left: 50%;
  top: 35%;
  transform: translateX(-50%);
  font-size: 20rpx;
}

.con-item-bottom{
  width: 100%;
}

.buy-ticket-btn{
  float: right;
  margin-right: 20rpx;
  text-align: center;
  padding: 2rpx 50rpx;
  font-size: 24rpx;
}