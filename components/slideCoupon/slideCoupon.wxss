.slide-coupon{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0,.7);
  z-index: 9999;
  overflow: hidden;
}

@keyframes slide-up{
  from{
    bottom: -650rpx;
  }
  to{
    bottom: 0;
  }
}

.inner{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 650rpx;
  background-color: #fff;
  box-sizing: border-box;
  padding: 30rpx;
  color: #333;
  animation: slide-up .5s;
}

.title{
  width: 100%;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  position: relative;
}

.del{
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 0;
}

.del-img{
  width: 100%;
  height: 100%;
}

.scroll-box{
  width: 100%;
  height: 540rpx;
}

.item{
  width: 98%;
  height: 160rpx;
  box-sizing: border-box;
  padding: 20rpx;
  margin: 6rpx 0 20rpx 4rpx;
  box-shadow: 4rpx 4rpx 6rpx #eee,-4rpx -4rpx 6rpx #eee;
  border-radius: 10rpx;
}

.top{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.l{
  display: flex;
  align-items: center;
}

.r{
  width: 140rpx;
  height: 60rpx;
  border-radius: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #F11818;
  font-size: 24rpx;
  font-weight: bold;
  background-color: #FFC8C7;
}

.cur-r{
  background-color: #ccc;
  color: #fff;
}

.item-name{
  font-size: 28rpx;
  font-weight: bold;
  margin-left: 20rpx;
}

.item-num{
  font-size: 24rpx;
  color: #F11818;
  margin-top: 10rpx;
}

.btm{
  font-size: 22rpx;
  color: #999;
}

.no-coupon{
  position: absolute;
  top: 140rpx;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
  color: #FF8008;
  font-size: 28rpx;
}