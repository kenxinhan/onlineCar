.container{
    position: relative;
    width: 100%;
    height: 100vh;
  }
  /* cover-view{
    overflow: visible;
  } */
  .total{
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      z-index: 1111;
      box-shadow:3px 5px 10px #e0e0e0; 
      box-sizing: border-box;
      border: 1px solid #f5f5f5;
      background: #fff;
  }
  .total-driver{
      width: 100%;
    height: 190rpx;
    background: #fff;
    /* border-bottom: 1px solid #f5f5f5; */
    box-sizing: border-box;
  }
  .driver-info{
      position: absolute;
      width: 480rpx;
      float: left;
      display: flex;
      align-items: center;
      margin-left: 20rpx;
      margin-top: 20rpx;
  }
  .driver-img{
    position: relative;
    width: 160rpx;
    height: 160rpx;
    text-align: center;
  }

  .driverImg{
    width: 80rpx;
    height: 80rpx;
    display: inline-block;
    margin-top: 20rpx;
    padding-bottom: 10rpx;
  }

  .driver-detailed{
      margin-left: 20rpx;
  }
  .detailed-company-name{
      color: #333333;
      font-size: 24rpx;
      flex: 1;
  }
  .driver-name{
    width: 100%;
    position: absolute;
    text-align: center;
    bottom: 10rpx;
    font-size: 30rpx;
  }
  .detailed-company-name .orderTotal{
      position: absolute;
      display: inline-block;
      font-size: 26rpx;
      opacity: .6;
      margin-left: 5rpx;
      margin-top: 5rpx;
  }
  .detailed-Cartnumber{
    margin-top: 17rpx;
     font-size: 24rpx;
     color: #484848;
    display: flex;
  }
  .cartnumber{
    margin-right: 80rpx;
  }
  .detailed-cart{
      margin-top: 17rpx;
      font-size: 24rpx;
      color: #666666;
      overflow: hidden;
      white-space: nowrap;
      text-overflow: ellipsis;
  }
  .driver-message{
      float: right;
      display: flex;
      height: 190rpx;
      align-items: center;
      margin-right: 32rpx;
      text-align: center;
  }
  .driver-message .mas{
      margin-right: 24rpx;
  }
  .top-text{
    display: flex;
  }
  .star{
    display: flex;
    font-size: 24rpx;
  }
  .detailed-company-name{
    margin-right: 30rpx;
  }
  