.container{
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  position: relative;
}

.item{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  color: #333;
  font-size: 28rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  margin-bottom: 2rpx;
}

.integral{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.desc{
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 20rpx;
  color: #333;
  font-size: 28rpx;
  line-height: 50rpx;
  background-color: #fff;
  margin-top: 20rpx;
}

.desc-name{
  font-weight: bold;
}

.btn{
  width: 690rpx;
  height: 90rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 20rpx;
  background: linear-gradient(to right,#FF8008,#FFC837);
  color: #fff;
}

