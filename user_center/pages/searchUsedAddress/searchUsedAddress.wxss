.container{
  position: relative;
  width: 100%; 
  height: 100vh; 
  background-color: #eee;
}
.location{
  width: 100%;
  height: 88rpx;
  top: 0;
  background-color: #fff;
  font-size: 28rpx;
  box-shadow:2px 2px 2px #e0e0e0; 
}
.location-city{
  height: 88rpx;
  position: absolute;
  width: 160rpx;
  line-height: 88rpx;
  text-align: center;
  color: #999999;
  
}
.location-city::after{
  border-left: 4px solid transparent;  
  border-right: 4px solid transparent;  
  border-top: 4px solid #a4a4a4;  
  content: "";  
  position: absolute;      
  width: 0; 
  top: 40rpx;
  right: 15rpx;

}
.location-input{
  height: 88rpx;
  width: 470rpx;
  margin-left: 160rpx;
  line-height: 88rpx;
  /* background: red; */
}
.location-cancel{
  width: 120rpx;
  height: 88rpx;
  position: absolute;
  right: 0;
  top: 0;
  line-height: 88rpx;
  color: #999999;
}
.addressList{
  position: fixed;
  top: 88rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 999;
  /* margin-top: 30rpx; */
}
.destination{
  box-sizing: border-box;
  top: 50rpx;
  width: 710rpx;
  margin-left: auto;
  margin-right: auto;
  box-shadow:3px 5px 10px #e0e0e0;
  background-color: #fff;
}
.destination-content{
  width: 712px;
  height: 119rpx;    
  border: 1px solid #ebebeb;
  box-shadow:3px 5px 10px #e0e0e0;
  display: flex;
  align-items: center;
}
.content-image{
    width: 80rpx;
    height: 119rpx;
    line-height: 119rpx;
    text-align: center;
}
.destination-content image{
  width: 20rpx;
  height: 20rpx;
  opacity: .3;
  color: #999999;

}
.content{
  width: 240px;
  box-sizing: border-box;
  overflow: hidden;
}
.content-name{
    display: block;
    color: #333333;
    font-size: 26rpx;
}
.content-detail{
  display: block;
  color: #999999;
  font-size: 26rpx;
  width: 100%;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}