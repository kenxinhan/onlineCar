<view class="container">
  <view class="location">
		<view class="location-city" bindtap="chooseCity">
			<text>{{destinationCity}}</text>
		</view>
		<input type="text" class="location-input" focus="true" value="{{value}}" bindinput="searchInputend" placeholder="请选择地址" placeholder-style="color:#cccccc" />
		<navigator url="/pages/index/index" redirect>
			<view class="location-cancel">取消</view>
		</navigator>
	</view>
	<view class="addressList" wx:if="{{showResList}}">
		<scroll-view scroll-with-animation="{{true}}">
			<view wx:if="{{!value==''}}" class="destination" wx:for="{{address}}" bindtap="clickAddress" wx:key="index" data-item="{{item}}">
				<view class="destination-content">
					<view class="content-image">
						<image src="../../assets/images/dingwei.png"></image>
					</view>
					<view class="content">
						<text class="content-name">{{item.title}}</text>
						<text class="content-detail">{{item.address}}</text>
					</view>
				</view>
			</view>
		</scroll-view>
	</view>
</view>