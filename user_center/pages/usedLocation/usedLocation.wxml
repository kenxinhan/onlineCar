<view class="container">
	<view class="wrapper">
		<view class="home_comp">
			<view class="home" bindtap="getFocus" data-which="home">
				<image src="../../assets/images/home.png"></image>
				<view class="text">
					<view class="t">{{home.title || home}}</view>
					<view class="b">家</view>
				</view>
			</view>
			<view class="company" bindtap="getFocus" data-which="company">
				<image src="../../assets/images/company.png"></image>
				<view class="text">
					<view class="t">{{company.title || company}}</view>
					<view class="b">公司</view>
				</view>
			</view>
		</view>

		<view class="used-location">
			<view class="tit">
        <view>常用地点</view>
        <image src="../../assets/images/add-friend.png" bindtap="getFocus" data-which="location"></image>
      </view>
			<view class="list">
				<view class="item" wx:for="{{usedLocation}}" wx:key="index">
          <view class="left">
					  <image src="../../assets/images/dingwei.png"></image>
            <view class="md">
              <view class="lo_name">{{item.title}}</view>
              <view class="desc">{{item.address}}</view>
            </view>
          </view>
          <image class="more" src="../../assets/images/more.png" bindtap="moreHandle" data-id="{{item.id}}" data-which="location"></image>
				</view>
			</view>
		</view>
	</view>

	<view class="cover" hidden="{{coverHide}}">
		<view class="handle-btn">
			<view class="change_lo" bindtap="changeLocation">修改地点</view>
			<view class="del_lo" bindtap="delLocation">删除地点</view>
			<view class="cancle" bindtap="cancle">取消</view>
		</view>
	</view>
</view>