.driver-info {
  width: 100%;
  padding: 40rpx 0 20rpx;
  display: flex;
  color: #333;
  font-size: 28rpx;
}

.driver-info .left {
  flex: 1;
  text-align: center;
  margin-right: 60rpx;
  font-weight: bold;
}

.driver-info image {
  /* margin: 15rpx 0 30rpx; */
  width: 80rpx;
  height: 80rpx;
}

.driver-info .right {
  flex: 3;
  font-size: 28rpx;
}

.driver-info .right .top {
  line-height: 44rpx;
  display: flex;
}

.driver-info .right .top .car-num,.driver-info .right .top .id {
  padding: 0 8rpx;
  background-color: #F2F2F2;
  font-weight: bold;
}

.driver-info .right .top .r {
  margin-left: 40rpx;
}

.driver-info .right .btm {
  line-height: 44rpx;
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #333;
}

.temp-container{
  display: flex;
  justify-content: space-between;
  padding: 0 60rpx;
  border-top: 1rpx solid #F2F2F2;
  box-sizing: border-box;
  height: 180rpx;
  margin-top: 40rpx;
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.addFriend {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* padding: 30rpx 0;
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  border-top: 1rpx solid #999; */
}

.addFriend image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}

.call-service{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.container {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  align-items: center;
}

.shadow-box {
  width: 100%;
  border-radius: 5px;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.pay-title {
  text-align: center;
  color: #333;
  margin-bottom: 40rpx;
}

.pay-detail {
  width: 100%;
  margin-bottom: 40rpx;
  box-sizing: border-box;
}

.border-bottom {
  border-bottom: 1px solid #f1f1f1;
  padding: 10rpx 0;
}

.flex-box {
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
}

.color-999 {
  color: #999;
}

.pay-total {
  font-weight: 550;
}

.pay-tips {
  text-align: center;
  font-size: 24rpx;
  color: #999;
}

.call-icon {
  width: 50rpx;
  height: 50rpx;
  align-items: center;
}

.call-text {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
}

.rule {
  margin: 40rpx 0 80rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.line-driver-list{
  margin: 20rpx 30rpx;
}

.line-driver-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 234rpx;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 40rpx 20rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
}

.l_d_lf{
  width: 90rpx;
  text-align: center;
  font-weight: bold;
}

.l_d_lf image{
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 14rpx;
}

.l_d_md{
  width: 390rpx;

}

.line-str-text{
  position: relative;
  border-bottom: 1rpx solid #F2F2F2;
  padding-bottom: 35rpx;
}

.line-str-text::before{
  content: '';
  width: 12rpx;
  height: 12rpx;
  position: absolute;
  top: 22%;
  left: -20rpx;
  background-color: #328944;
  border-radius: 50%;
}

.line-end-text{
  position: relative;
  color: #FF8008;
  padding-top: 36rpx;
}

.line-end-text::before{
  content: '';
  width: 12rpx;
  height: 12rpx;
  position: absolute;
  top: 65%;
  left: -20rpx;
  background-color: #FF8F12;
  border-radius: 50%;
}

.l_d_rt image{
  width: 64rpx;
  height: 64rpx;
}

.EXC-time{
  font-weight: bold;
  color: #333;
}

.EXC-time-city{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  margin: 30rpx 0;
}

.EXC-time-info{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  padding: 0 60rpx;
}

.EXC-line{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 80rpx;
  margin: 30rpx auto 0;
  box-sizing: border-box;
}

.EXC-line-str,.EXC-line-end{
  width: 180rpx;
  color: #333;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
}

.taxi-title{
  font-size:36rpx;
  color:#FF8008;
}

.end-taxi-title{
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}