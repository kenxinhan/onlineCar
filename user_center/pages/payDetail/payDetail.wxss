@import '../../../app.wxss';

page {
  width: 100%;
  height: 100vh;
  background-color: #f4f6f8;
}

.over {
  margin: 20rpx 30rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  background-color: #fff;
  padding: 10rpx 20rpx 0;
  font-size: 30rpx;
  color: #333;
}

.tips {
  width: 100%;
  font-size: 36rpx;
  font-weight: bold;
  padding: 50rpx 0;
  text-align: center;
  border-bottom: 1rpx solid #ccc;
}

.close-btm {
  display: flex;
  justify-content: space-around;
  align-items: center;
  text-align: center;
  padding: 30rpx 0;
  font-size: 32rpx;
  font-weight: bold;
}

.close-btm image {
  width: 50rpx;
  height: 50rpx;
}

.close-btm button {
  font-size: 28rpx;
  font-weight: bold;
  margin-top: 10rpx;
}

.h2 {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-weight: bold;
}

.h2 .str {
  width: 400rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  color: #333;
  text-align: center;
}

.h2 .end {
  width: 400rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  color: #333;
  text-align: center;
}

.h2 image {
  width: 80rpx;
  height: 80rpx;
}

.h2 .car-img,.car-img-f {
  position: relative;
  margin: 0 80rpx;
  height: 64rpx;
}

.h2 .car-img>image, .car-img-f>image{
  width: 64rpx;
  height: 64rpx;
}

