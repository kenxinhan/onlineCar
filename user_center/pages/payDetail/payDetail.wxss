@import '../../../app.wxss';

page {
  width: 100%;
  height: 100vh;
  background-color: #f4f6f8;
}

.over {
  margin: 20rpx 30rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  background-color: #fff;
  padding: 10rpx 20rpx 0;
  font-size: 30rpx;
  color: #333;
}

.tips{
  width: 100%;
  font-size: 36rpx;
  font-weight: bold;
  padding: 50rpx 0;
  text-align: center;
  border-bottom: 1rpx solid #ccc;
}

.close-btm{
  display: flex;
  justify-content: space-around;
  align-items: center;
  text-align: center;
  padding: 30rpx 0;
}

.close-btm image{
  width: 66rpx;
  height: 66rpx;
}

.close-btm button{
  font-size: 28rpx;
  font-weight: bold;
  margin-top: 10rpx;
}

.h2 {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-weight: bold;
}

.h2 .str {
  width: 400rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  color: #333;
}

.h2 .end {
  width: 400rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  color: #333;
}
.h2 image{
  width: 80rpx;
  height: 80rpx;
}

.h2 .car-img {
  position: relative;
  margin: 0 80rpx;
}

.h2 .car-img::before {
  content: "";
  width: 50rpx;
  height: 1rpx;
  background-color: #999;
  position: absolute;
  left: -64rpx;
  top: 50%;
  margin-top: -2rpx;
}

.h2 .car-img::after {
  content: "";
  width: 50rpx;
  height: 1rpx;
  background-color: #999;
  position: absolute;
  right: -64rpx;
  top: 50%;
  margin-top: -2rpx;
}

.driver-info {
  width: 100%;
  padding: 40rpx 0 20rpx;
  display: flex;
  color: #333;
}

.driver-info .left {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  margin-right: 60rpx;
  font-weight: bold;
}

.driver-info image {
  /* margin: 15rpx 0 30rpx; */
  width: 80rpx;
  height: 80rpx;
}

.driver-info .right {
  flex: 3;
  font-size: 28rpx;
}

.driver-info .right .top {
  line-height: 44rpx;
  display: flex;
  justify-content: space-between;
}

.driver-info .right .top .r{
  margin-left: 40rpx;
}

.driver-info .right .btm {
  line-height: 44rpx;
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #333;
}

.addFriend{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0;
  border-top: 1rpx solid #999;
}
.addFriend image{
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
}



.container {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  align-items: center;
}

.shadow-box {
  width: 100%;
  border-radius: 5px;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.pay-title {
  text-align: center;
  color: #333;
  margin-bottom: 40rpx;
}

.pay-detail {
  width: 100%;
  margin-bottom: 40rpx;
  box-sizing: border-box;
}

.border-bottom {
  border-bottom: 1px solid #f1f1f1;
  padding: 10rpx 0;
}

.flex-box {
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
}

.color-999 {
  color: #999;
}

.pay-total {
  font-weight: 550;
}

.pay-tips {
  text-align: center;
  font-size: 24rpx;
  color: #999;
}

.call-service {
  margin-top: 40rpx;
  text-align: center;
  color: #999;
}

.call-icon {
  width: 94rpx;
  height: 93rpx;
  align-items: center;
}

.call-text {
  display: block;
  font-size: 24rpx;
}

.rule {
  margin: 40rpx 0 80rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}